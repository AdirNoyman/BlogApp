<%- include("partials/header"); -%>

<% posts.forEach(post => { %>

    <h1><%= post.title %></h1>
    <% if (posts.indexOf(post) > 0) {%>
    <p><%= post.content.substring(0, 100) + " ..." %> <a href="/posts/<%= post.title %>">Read More</a></p>    
    <% } else { %>
    <p><%= post.content %></p>
    <% } %>    
<% }); %>

<%- include("partials/footer"); -%> 